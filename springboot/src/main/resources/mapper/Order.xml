<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fxf.demo.mapper.OrderMapper">



    <select id="findAll" resultType="com.fxf.demo.entity.User">
        select * from sys_user
    </select>

    <update id="updateOrderInfo">
        update 1bishe.sys_order
        <set>
            <if test="note != null">
                note=#{note}
            </if>
        </set>

        <where>
            orderId = #{orderId}
        </where>
    </update>



    <select id="selectCount" resultType="Integer">
        select count(*) from 1bishe.sys_order

        where eName like concat('%',#{eName},'%')

    </select>
</mapper>