<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fxf.demo.mapper.RoomMapper">



    <update id="updateRoomInfo">
        update 1bishe.sys_room
        <set>
            <if test="roomName != null">
                roomName=#{roomName},
            </if>
            <if test="location != null">
                location=#{location}
            </if>
            <if test="roomType != null">
                roomType=#{roomType},
            </if>
            <if test="roomPrice != null">
                roomPrice=#{roomPrice},
            </if>
        </set>

        <where>
            roomId = #{roomId}
        </where>
    </update>

    <!--<update id="updateRoomCondition">
        update 1bishe.sys_room
        <set>
            <if test="roomCondition == 0">
                roomCondition = 1,
            </if>
            <if test="roomCondition == 1">
                roomCondition = 0,
            </if>
        </set>

        <where>
            roomId = #{roomId}
        </where>
    </update>-->


    <select id="selectCount" resultType="Integer">
        select count(*) from 1bishe.sys_room

        where roomName like concat('%',#{roomName},'%')

    </select>
</mapper>